@model Banca.Models.Aluno
@{
    ViewBag.Title = "Update";
}

<h2>Editar aluno</h2>

<div class="panel">

    <form action="/Aluno/Update" method="post">

        <div class="form-group">
            <label>Id</label>
            <input class="form-control" type="text" id="Id" name="IdAluno" value=@Model.IdAluno />
        </div>

        <div class="form-group">
            <label>Nome</label>
            <input class="form-control" placeholder="Nome do Aluno"
                   type="text" id="Name" name="NameAluno" value=@Model.NameAluno />
        </div>


        <button type="submit" class="btn btn-default">Salvar</button>

    </form>
</div>